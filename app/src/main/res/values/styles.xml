<resources>

    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="navigationIcon">@drawable/ic_chevron_back</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="Widget.App.DrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">?colorSurface</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:minWidth">176dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingTop">@dimen/dimen_8</item>
        <item name="android:paddingBottom">@dimen/dimen_8</item>
        <item name="android:paddingStart">@dimen/dimen_24</item>
        <item name="android:paddingEnd">@dimen/dimen_24</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/dimen_32</item>
    </style>

    <style name="Widget.App.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@drawable/bg_rounded_corner_half</item>
        <item name="android:backgroundTint">?colorSecondary</item>
        <item name="tabIndicator">@drawable/bg_rounded_corner_half</item>
        <item name="tabIndicatorAnimationMode">elastic</item>
        <item name="tabIndicatorGravity">stretch</item>
        <item name="tabMode">fixed</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabTextAppearance">?attr/textAppearanceSubtitle1</item>
        <item name="tabTextColor">@color/gray_dark</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabIndicatorColor">?colorPrimary</item>
    </style>
</resources>
